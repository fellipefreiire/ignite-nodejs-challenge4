                    }
                  },
                  "example": {
                    "id": "a32d8169-56ef-4d48-a2c1-a595ff748116",
                    "admin": true,
                    "name": "Felipe Freire",
                    "email": "fellipefreiire3@gmail.com",
                    "created_at": "2021-11-04T11:16.992Z",
